@model MvcBanHang.Models.loai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Danh mục</legend>

    <div class="editor-label">
        @Html.LabelFor(model => model.maloai)
    </div>

    <div class="editor-field">
        @Html.EditorFor(model => model.maloai)
        @Html.ValidationMessageFor(model => model.maloai)
    </div>

    <div class="editor-label">
        Tên danh mục
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.tenloai)
        @Html.ValidationMessageFor(model => model.tenloai)
    </div>

    <p>
        <input type="submit" value="Save" />
    </p>
</fieldset>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>